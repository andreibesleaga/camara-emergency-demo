{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "skipLibCheck": true,
    "rootDir": "./backend",
    "outDir": "./backend/dist",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "strict": true
  },
  "include": ["backend/**/*"],
  "exclude": ["frontend", "node_modules"]
}

